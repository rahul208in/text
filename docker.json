{
  "rules": [
    {
      "condition": {
        "startswith": "FROM",
        "contains": "",
        "endswith": "LATEST"
      },
      "description": "Avoid using 'latest' tag for base image in FROM instruction",
      "id": "FromImageVersion"
    },
    {
      "condition": {
        "startswith": "USER",
        "contains": "",
        "endswith": "root"
      },
      "description": "Avoid running containers as root. Use a non-root user instead",
      "id": "ContainerUser"
    }
  ]
}
